<div class="flex items-center justify-between gap-3">
  <div>
    <h2 class="text-lg font-semibold">Delegar</h2>
    <p class="text-sm text-slate-600 mt-1">Fecha y responsable requeridos. Ordenado por fecha mÃ¡s prÃ³xima primero.</p>
  </div>
  <a href="/collect" class="text-sm px-3 py-1.5 rounded-lg border bg-white hover:bg-slate-50">Ir a Collect</a>
</div>

<% if (error === 'missing_fields') { %>
  <div class="mt-4 px-3 py-2 rounded-lg border border-amber-200 bg-amber-50 text-sm text-amber-800">Completa responsable y fecha antes de guardar.</div>
<% } %>

<form method="GET" action="/delegar" id="delegarFilters" class="mt-4 bg-white dark:bg-slate-800 border dark:border-slate-700 rounded-xl p-3 flex flex-wrap items-end gap-2 <%= items.length < 3 ? 'hidden' : '' %>">
  <div>
    <label class="text-xs text-slate-500">Agrupar por</label>
    <select name="groupBy" class="block border rounded-lg px-2 py-1.5 text-sm auto-submit-filter">
      <option value="date" <%= groupBy === 'date' ? 'selected' : '' %>>Fecha</option>
      <option value="owner" <%= groupBy === 'owner' ? 'selected' : '' %>>Responsable</option>
    </select>
  </div>
  <div>
    <label class="text-xs text-slate-500">Filtrar responsable</label>
    <input type="text" name="owner" value="<%= ownerFilter || '' %>" placeholder="Ej: Ana" class="block border rounded-lg px-2 py-1.5 text-sm auto-submit-filter" />
  </div>
</form>

<div class="mt-4 space-y-3">
  <% if (!items.length) { %>
    <div class="bg-white dark:bg-slate-800 border dark:border-slate-700 rounded-xl overflow-hidden">
      <div class="empty-state m-4">
        <div class="text-4xl mb-3">ğŸ¤</div>
        <div class="text-base font-semibold text-slate-700 dark:text-slate-200 mb-2">Sin tareas delegadas</div>
        <div class="text-sm text-slate-600 dark:text-slate-400 mb-4">
          Tareas asignadas a otras personas aparecerÃ¡n aquÃ­.<br/>
          Puedes agruparlas por fecha o responsable.
        </div>
        <a href="/collect" class="inline-flex items-center gap-2 px-4 py-2 rounded-lg bg-blue-600 text-white hover:bg-blue-700 transition-all text-sm font-medium hover:shadow-md">
          <span>ğŸ“¥</span>
          <span>Ir a Collect</span>
        </a>
      </div>
    </div>
  <% } %>

  <% for (const g of groups) { %>
    <div class="bg-white border rounded-xl overflow-hidden">
      <div class="px-3 py-2 text-xs text-slate-600 bg-slate-50 border-b"><%= g.label %></div>

      <% for (const it of g.rows) { %>
        <div class="px-3 py-2 border-b last:border-b-0 <%= (!it.delegatedFor || !it.delegatedTo) ? 'bg-amber-50' : '' %>">
          <div class="flex items-center gap-2">
            <form method="POST" action="/delegar/<%= it.id %>/update" class="delegar-quick-form w-36 shrink-0" data-id="<%= it.id %>">
              <input type="hidden" name="_csrf" value="<%= csrfToken %>" />
              <input type="hidden" name="title" value="<%= it.title || it.input %>" />
              <input type="hidden" name="delegatedTo" value="<%= it.delegatedTo || '' %>" />
              <input type="date" name="delegatedFor" value="<%= it.delegatedFor || '' %>" class="w-full text-xs px-1.5 py-1 rounded bg-transparent border border-transparent hover:border-slate-200 focus:border-slate-300" required onchange="this.form.submit()" />
            </form>

            <form method="POST" action="/delegar/<%= it.id %>/update" class="hidden flex-1 items-center gap-2 delegar-edit-form" data-id="<%= it.id %>">
              <input type="hidden" name="_csrf" value="<%= csrfToken %>" />
              <input type="text" name="title" value="<%= it.title || it.input %>" class="w-full border rounded-md px-2 py-1.5 text-sm" />
              <input type="text" name="delegatedTo" value="<%= it.delegatedTo || '' %>" placeholder="Responsable" class="w-44 border rounded-md px-2 py-1.5 text-sm" required />
              <input type="date" name="delegatedFor" value="<%= it.delegatedFor || '' %>" class="border rounded-md px-2 py-1.5 text-sm" required />
              <button class="text-xs px-2 py-1.5 rounded border bg-white hover:bg-slate-50">Guardar</button>
            </form>

            <div class="delegar-view-row flex-1 min-w-0" data-id="<%= it.id %>">
              <span class="text-sm"><%= it.title || it.input %></span>
              <span class="text-xs text-slate-500 ml-2">â†’ <%= it.delegatedTo || 'Sin responsable' %></span>
            </div>

            <button type="button" class="text-slate-500 hover:text-slate-700 edit-toggle" data-id="<%= it.id %>" title="Editar responsable/actividad">âœï¸</button>
          </div>

          <% if (!it.delegatedFor || !it.delegatedTo) { %>
            <div class="text-[11px] text-amber-800 mt-1">Completa fecha y responsable.</div>
          <% } %>
        </div>
      <% } %>
    </div>
  <% } %>
</div>

<script nonce="<%= cspNonce %>">
  (function () {
    document.querySelectorAll('.edit-toggle').forEach((btn) => {
      btn.addEventListener('click', () => {
        const id = btn.dataset.id;
        const edit = document.querySelector(`.delegar-edit-form[data-id="${id}"]`);
        const view = document.querySelector(`.delegar-view-row[data-id="${id}"]`);
        if (!edit || !view) return;
        edit.classList.remove('hidden');
        edit.classList.add('flex');
        view.classList.add('hidden');
        const input = edit.querySelector('input[name="title"]');
        if (input) input.focus();
      });
    });

    const filtersForm = document.getElementById('delegarFilters');
    if (!filtersForm) return;

    let t = null;
    filtersForm.querySelectorAll('.auto-submit-filter').forEach((el) => {
      if (el.tagName === 'SELECT') {
        el.addEventListener('change', () => filtersForm.submit());
      } else {
        el.addEventListener('input', () => {
          clearTimeout(t);
          t = setTimeout(() => filtersForm.submit(), 250);
        });
      }
    });
  })();
</script>
