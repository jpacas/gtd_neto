<h2 class="text-lg font-semibold">Desglosar</h2>
<p class="text-sm text-slate-600 mt-1">Convierte proyectos en pasos lógicos y secuenciales.</p>

<div class="mt-4 space-y-3">
  <% if (!items.length) { %>
    <div class="bg-white border rounded-xl p-5 text-sm text-slate-600">No hay proyectos en Desglosar.</div>
  <% } %>

  <% for (const it of items) { %>
    <div class="bg-white border rounded-xl p-4">
      <form method="POST" action="/desglosar/<%= it.id %>/update" class="space-y-2">
        <input type="hidden" name="_csrf" value="<%= csrfToken %>" />

        <div>
          <label class="text-xs text-slate-500">Proyecto (desde Collect)</label>
          <input type="text" name="title" value="<%= it.title || it.input %>" class="w-full border rounded-lg px-2.5 py-2 text-sm" />
        </div>

        <div>
          <label class="text-xs text-slate-500">Objetivo / Definición de finalizado</label>
          <textarea name="objective" rows="2" class="w-full border rounded-lg px-2.5 py-2 text-sm" placeholder="¿Cómo se ve este proyecto cuando está terminado?"><%= it.objective || '' %></textarea>
        </div>

        <button class="text-sm px-3 py-1.5 rounded-lg bg-blue-600 text-white hover:bg-blue-700">Guardar proyecto</button>
      </form>

      <div class="mt-3 border-t pt-3">
        <div class="text-xs text-slate-500 mb-1">Subactividades</div>

        <form method="POST" action="/desglosar/<%= it.id %>/subtasks/add" class="flex gap-2 items-center mb-2">
          <input type="hidden" name="_csrf" value="<%= csrfToken %>" />
          <input type="text" name="subtask" class="flex-1 border rounded-lg px-2.5 py-2 text-sm" placeholder="Ej: Definir 3 entregables" />
          <button class="text-sm px-3 py-2 rounded-lg border bg-white hover:bg-slate-50">Agregar</button>
        </form>

        <div class="space-y-1.5">
          <% for (const s of (it.subtasks || [])) { %>
            <div class="px-2.5 py-2 border rounded-lg flex items-center gap-2 <%= s.status === 'sent' ? 'bg-green-50 border-green-200' : '' %>">
              <div class="flex-1 text-sm"><%= s.text %></div>
              <% if (s.status === 'sent') { %>
                <span class="text-xs text-green-700">Enviado a <%= s.sentTo %> ✓</span>
              <% } else { %>
                <form method="POST" action="/desglosar/<%= it.id %>/subtasks/<%= s.id %>/send" class="flex gap-1 items-center">
                  <input type="hidden" name="_csrf" value="<%= csrfToken %>" />
                  <% for (const d of destinations) { %>
                    <button name="destination" value="<%= d.key %>" class="text-[11px] px-2 py-1 rounded border bg-white hover:bg-slate-50">A <%= d.label %></button>
                  <% } %>
                </form>
              <% } %>
            </div>
          <% } %>
        </div>
      </div>
    </div>
  <% } %>
</div>
