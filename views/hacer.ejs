<div class="flex flex-col md:flex-row md:items-center md:justify-between gap-3 mb-4">
  <div class="flex-1">
    <h2 class="text-lg font-semibold dark:text-slate-100">Hacer</h2>
    <p class="text-sm text-slate-600 dark:text-slate-400 mt-1">Vista compacta de acciones &lt;10 min, ordenadas por urgencia y luego importancia.</p>
    <details class="mt-2">
      <summary class="text-xs text-blue-600 cursor-pointer hover:underline">‚ÑπÔ∏è ¬øC√≥mo se calcula la accionabilidad?</summary>
      <div class="mt-1 text-xs text-slate-600 bg-slate-50 p-2 rounded">
        <p class="font-semibold mb-1">Score de accionabilidad (m√°ximo 100):</p>
        <ul class="list-disc ml-4 space-y-0.5">
          <li><strong>40 puntos:</strong> Empieza con verbo infinitivo (llamar, enviar, revisar)</li>
          <li><strong>30 puntos:</strong> Tiene suficientes palabras (m√≠n. 2)</li>
          <li><strong>20 puntos:</strong> Es concisa (‚â§140 caracteres)</li>
          <li><strong>10 puntos:</strong> Evita lenguaje vago</li>
        </ul>
        <p class="mt-1">‚úÖ Se considera accionable con ‚â•70 puntos</p>
      </div>
    </details>
  </div>
  <div class="flex gap-2 items-center flex-wrap">
    <span class="text-xs text-slate-500 dark:text-slate-400">Filtrar:</span>
    <button onclick="filterByUrgency(event, 0)" class="text-xs px-2 py-1 rounded border dark:border-slate-700 bg-white dark:bg-slate-800 hover:bg-slate-100 dark:hover:bg-slate-700 transition-colors filter-btn">Todos</button>
    <button onclick="filterByUrgency(event, 5)" class="text-xs px-2 py-1 rounded border dark:border-slate-700 bg-white dark:bg-slate-800 hover:bg-slate-100 dark:hover:bg-slate-700 transition-colors filter-btn">üî¥ Urgente (5)</button>
    <button onclick="filterByUrgency(event, 4)" class="text-xs px-2 py-1 rounded border dark:border-slate-700 bg-white dark:bg-slate-800 hover:bg-slate-100 dark:hover:bg-slate-700 transition-colors filter-btn">üü° Alta (4)</button>
    <a href="/collect" class="text-sm px-3 py-1.5 rounded-lg border dark:border-slate-700 bg-white dark:bg-slate-800 hover:bg-slate-100 dark:hover:bg-slate-700 transition-colors">Ir a Collect</a>
  </div>
</div>

<div class="mt-4 rounded-xl border dark:border-slate-700 bg-white dark:bg-slate-800 overflow-hidden" id="hacerList">
  <div class="px-3 py-1.5 border-b bg-slate-50 dark:bg-slate-800/60 text-[11px] text-slate-500 dark:text-slate-400 flex items-center gap-2">
    <span class="w-8 text-center" title="Urgencia (1-5)">U</span>
    <span class="w-8 text-center" title="Importancia (1-5)">I</span>
    <span>Actividad</span>
  </div>
  <% if (!items.length) { %>
    <div class="empty-state m-4">
      <div class="text-4xl mb-3">‚úÖ</div>
      <div class="text-base font-semibold text-slate-700 dark:text-slate-200 mb-2">No hay acciones pendientes</div>
      <div class="text-sm text-slate-600 dark:text-slate-400 mb-4">
        Las acciones r√°pidas (&lt;10 minutos) aparecer√°n aqu√≠.<br/>
        Organiza tus tareas desde Collect para empezar.
      </div>
      <a href="/collect" class="inline-flex items-center gap-2 px-4 py-2 rounded-lg bg-blue-600 text-white hover:bg-blue-700 transition-colors text-sm font-medium hover:shadow-md">
        <span>üì•</span>
        <span>Ir a Collect</span>
      </a>
    </div>
  <% } %>

  <% for (const it of items) { %>
    <%
      // Calculate priority score for color coding
      const urgencyVal = it.urgency || 3;
      const importanceVal = it.importance || 3;
      const priorityScore = urgencyVal * importanceVal;
      let borderClass = '';
      let bgClass = it.actionableOk ? '' : 'bg-red-50 dark:bg-red-900/10';

      if (priorityScore >= 20) {
        borderClass = 'border-l-4 border-red-500 dark:border-red-400';
        bgClass = 'bg-red-50/50 dark:bg-red-900/20';
      } else if (priorityScore >= 12) {
        borderClass = 'border-l-4 border-orange-500 dark:border-orange-400';
        bgClass = 'bg-orange-50/50 dark:bg-orange-900/20';
      } else if (priorityScore >= 6) {
        borderClass = 'border-l-4 border-yellow-500 dark:border-yellow-400';
        bgClass = 'bg-yellow-50/30 dark:bg-yellow-900/10';
      }
    %>
    <div class="px-3 py-2 border-b last:border-b-0 <%= borderClass %> <%= bgClass %> hover:bg-opacity-75 transition-colors item-card" data-urgency="<%= urgencyVal %>">
      <div class="flex items-center gap-2">
        <form method="POST" action="/hacer/<%= it.id %>/update" class="hidden flex-1 items-center gap-2 hacer-edit-form" data-id="<%= it.id %>">
          <input type="hidden" name="_csrf" value="<%= csrfToken %>" />
          <input type="text" name="title" value="<%= it.title || it.input %>" class="w-full border rounded-md px-2 py-1.5 text-sm" />
          <input type="number" min="1" max="5" name="urgency" value="<%= it.urgency || 3 %>" class="w-14 border rounded-md px-2 py-1.5 text-sm text-center" title="Urgencia" />
          <input type="number" min="1" max="5" name="importance" value="<%= it.importance || 3 %>" class="w-14 border rounded-md px-2 py-1.5 text-sm text-center" title="Importancia" />
          <button class="text-xs px-2 py-1.5 rounded border bg-white hover:bg-slate-50">Guardar</button>
        </form>

        <form method="POST" action="/hacer/<%= it.id %>/update" class="hacer-view-row flex-1 min-w-0 flex items-center gap-2" data-id="<%= it.id %>">
          <input type="hidden" name="_csrf" value="<%= csrfToken %>" />
          <input type="hidden" name="title" value="<%= it.title || it.input %>" />
          <input type="hidden" name="urgency" value="<%= it.urgency || 3 %>" />
          <input type="hidden" name="importance" value="<%= it.importance || 3 %>" />
          <input type="hidden" name="estimateMin" value="<%= it.estimateMin || 10 %>" />

          <%
            const uVal = it.urgency || 3;
            const iVal = it.importance || 3;
            const uColor = uVal >= 5 ? 'bg-red-100 text-red-700 border-red-200' : uVal >= 4 ? 'bg-orange-100 text-orange-700 border-orange-200' : uVal >= 3 ? 'bg-yellow-50 text-yellow-700 border-yellow-200' : 'bg-slate-50 text-slate-500 border-slate-200';
            const iColor = iVal >= 5 ? 'bg-red-100 text-red-700 border-red-200' : iVal >= 4 ? 'bg-orange-100 text-orange-700 border-orange-200' : iVal >= 3 ? 'bg-yellow-50 text-yellow-700 border-yellow-200' : 'bg-slate-50 text-slate-500 border-slate-200';
          %>
          <button type="button" class="w-8 text-[11px] px-1 py-0.5 rounded border shrink-0 quick-edit font-semibold <%= uColor %>" data-field="urgency" data-value="<%= uVal %>" title="Urgencia: <%= uVal %>/5 ‚Äî click para editar"><%= uVal %></button>
          <button type="button" class="w-8 text-[11px] px-1 py-0.5 rounded border shrink-0 quick-edit font-semibold <%= iColor %>" data-field="importance" data-value="<%= iVal %>" title="Importancia: <%= iVal %>/5 ‚Äî click para editar"><%= iVal %></button>

          <span class="text-sm break-words min-w-0 flex-1"><%= it.title || it.input %></span>
        </form>

        <button type="button" class="text-slate-500 hover:text-slate-700 edit-toggle" data-id="<%= it.id %>" title="Editar texto" aria-label="Editar texto de actividad">‚úèÔ∏è</button>

        <form method="POST" action="/hacer/<%= it.id %>/complete" class="hacer-complete-form">
          <input type="hidden" name="_csrf" value="<%= csrfToken %>" />
          <input type="hidden" name="comment" value="" />
          <button type="button" class="text-[11px] px-2 py-1 rounded border bg-emerald-50 text-emerald-700 hover:bg-emerald-100 finalize-btn">Finalizada</button>
        </form>
      </div>

      <% if (!it.actionableOk) { %>
        <div class="text-[11px] text-red-700 mt-1"><%= it.actionableFeedback || 'Redacci√≥n poco accionable' %></div>
      <% } %>
      <% if (it.durationWarning) { %>
        <div class="text-[11px] text-amber-700 mt-1 bg-amber-50 px-2 py-1 rounded">‚ö†Ô∏è <%= it.durationWarning %></div>
      <% } %>
    </div>
  <% } %>
</div>

<script nonce="<%= cspNonce %>">
  (function () {
    function attachHandlers(root = document) {
      root.querySelectorAll('.edit-toggle').forEach((btn) => {
        if (btn.dataset.bound === '1') return;
        btn.dataset.bound = '1';
        btn.addEventListener('click', () => {
          const id = btn.dataset.id;
          const edit = document.querySelector(`.hacer-edit-form[data-id="${id}"]`);
          const row = document.querySelector(`.hacer-view-row[data-id="${id}"]`);
          if (!edit || !row) return;
          edit.classList.remove('hidden');
          edit.classList.add('flex');
          row.classList.add('hidden');
          const input = edit.querySelector('input[name="title"]');
          if (input) input.focus();
        });
      });

      root.querySelectorAll('.quick-edit').forEach((btn) => {
        if (btn.dataset.bound === '1') return;
        btn.dataset.bound = '1';
        btn.addEventListener('click', async () => {
          const field = btn.dataset.field;
          const current = Number(btn.dataset.value || 3);
          const label = field === 'urgency' ? 'Urgencia (1-5)' : 'Importancia (1-5)';
          const raw = await window.promptModal({
            title: label,
            defaultValue: String(current),
            placeholder: 'Ingresa un valor entre 1 y 5',
          });
          if (raw == null) return;
          const next = Number(raw);
          if (!Number.isFinite(next)) return;
          if (next < 1 || next > 5) return;

          const form = btn.closest('form');
          if (!form) return;
          const hidden = form.querySelector(`input[name="${field}"]`);
          if (!hidden) return;
          hidden.value = String(next);
          form.submit();
        });
      });

      root.querySelectorAll('.finalize-btn').forEach((btn) => {
        if (btn.dataset.bound === '1') return;
        btn.dataset.bound = '1';
        btn.addEventListener('click', async () => {
          const form = btn.closest('.hacer-complete-form');
          if (!form) return;
          const comment = await window.promptModal({
            title: 'Comentario opcional de cierre',
            defaultValue: '',
            placeholder: 'Comentario (opcional)',
            allowEmpty: true,
          });
          if (comment == null) return;
          const input = form.querySelector('input[name="comment"]');
          if (input) input.value = comment.trim();
          form.submit();
        });
      });
    }

    attachHandlers();
  })();

  // Funci√≥n de filtrado por urgencia
  window.filterByUrgency = function(evt, minUrgency) {
    const rows = document.querySelectorAll('#hacerList > div[class*="px-3"]');
    let visibleCount = 0;

    rows.forEach(row => {
      if (minUrgency === 0) {
        row.style.display = '';
        visibleCount++;
      } else {
        // Buscar el valor de urgencia en el row
        const urgencyInput = row.querySelector('input[name="urgency"]');
        const urgency = urgencyInput ? Number(urgencyInput.value) : 0;

        if (urgency >= minUrgency) {
          row.style.display = '';
          visibleCount++;
        } else {
          row.style.display = 'none';
        }
      }
    });

    // Highlight del bot√≥n activo
    document.querySelectorAll('.filter-btn').forEach(btn => {
      btn.classList.remove('bg-blue-100', 'dark:bg-blue-900', 'border-blue-300', 'dark:border-blue-700');
    });
    if (evt?.target) {
      evt.target.classList.add('bg-blue-100', 'dark:bg-blue-900', 'border-blue-300', 'dark:border-blue-700');
    }

    toast.info(`Mostrando ${visibleCount} item${visibleCount !== 1 ? 's' : ''}`, 1500);
  };
</script>
