<div class="mb-6">
  <h2 class="text-lg font-semibold">üì• Exportar / Importar Datos</h2>
  <p class="text-sm text-slate-600 mt-1">Realiza backups o migra tus datos</p>
</div>

<div class="grid md:grid-cols-2 gap-6">
  <!-- Exportar -->
  <div class="bg-white border rounded-xl p-5">
    <h3 class="text-base font-semibold mb-3">üì§ Exportar Datos</h3>
    <p class="text-sm text-slate-600 mb-4">
      Descarga todos tus datos en formato JSON o CSV
    </p>

    <div class="space-y-3">
      <a
        href="/export/json"
        class="block w-full text-center px-4 py-3 rounded-lg bg-blue-600 text-white hover:bg-blue-700 transition-colors"
      >
        <span class="text-lg">üìÑ</span> Descargar JSON
        <div class="text-xs opacity-80 mt-1">Formato completo con todos los campos</div>
      </a>

      <a
        href="/export/csv"
        class="block w-full text-center px-4 py-3 rounded-lg border hover:bg-slate-50 transition-colors"
      >
        <span class="text-lg">üìä</span> Descargar CSV
        <div class="text-xs text-slate-500 mt-1">Compatible con Excel y Google Sheets</div>
      </a>
    </div>

    <div class="mt-4 p-3 bg-blue-50 border border-blue-200 rounded-lg text-xs text-blue-800">
      <strong>üí° Tip:</strong> Exporta regularmente tus datos como backup de seguridad
    </div>
  </div>

  <!-- Importar -->
  <div class="bg-white border rounded-xl p-5">
    <h3 class="text-base font-semibold mb-3">üì• Importar Datos</h3>
    <p class="text-sm text-slate-600 mb-4">
      Restaura un backup o migra desde otro sistema
    </p>

    <div class="space-y-3">
      <div>
        <label class="block text-sm font-medium mb-2">Seleccionar archivo JSON</label>
        <input
          type="file"
          id="importFile"
          accept=".json"
          class="block w-full text-sm text-slate-600 file:mr-4 file:py-2 file:px-4 file:rounded-lg file:border-0 file:text-sm file:font-semibold file:bg-blue-50:bg-blue-900 file:text-blue-700:text-blue-200 hover:file:bg-blue-100:file:bg-blue-800"
        />
      </div>
      <% if (needApiKey) { %>
        <div>
          <label class="block text-sm font-medium mb-2">API key (solo para importaci√≥n por header)</label>
          <input
            type="password"
            id="importApiKey"
            class="block w-full border rounded-lg px-3 py-2 text-sm"
            placeholder="Ingresa tu API key"
          />
        </div>
      <% } %>

      <button
        id="importBtn"
        class="w-full px-4 py-3 rounded-lg bg-emerald-600 text-white hover:bg-emerald-700 transition-colors disabled:opacity-50 disabled:cursor-not-allowed"
        disabled
      >
        <span class="text-lg">‚¨ÜÔ∏è</span> Importar Datos
      </button>
    </div>

    <div id="importResult" class="mt-4 hidden"></div>

    <div class="mt-4 p-3 bg-amber-50 border border-amber-200 rounded-lg text-xs text-amber-800">
      <strong>‚ö†Ô∏è Importante:</strong> La importaci√≥n NO sobrescribe datos existentes, solo agrega items nuevos
    </div>
  </div>
</div>

<!-- Volver -->
<div class="mt-6">
  <a href="/" class="inline-flex items-center px-4 py-2 rounded-lg border bg-white hover:bg-slate-50 transition-colors text-sm">
    ‚Üê Volver al Dashboard
  </a>
</div>

<script nonce="<%= cspNonce %>">
  const fileInput = document.getElementById('importFile');
  const apiKeyInput = document.getElementById('importApiKey');
  const importBtn = document.getElementById('importBtn');
  const resultDiv = document.getElementById('importResult');
  const csrfToken = '<%= csrfToken %>';

  fileInput.addEventListener('change', (e) => {
    importBtn.disabled = !e.target.files.length;
  });

  importBtn.addEventListener('click', async () => {
    const file = fileInput.files[0];
    if (!file) return;

    LoadingManager.show(importBtn);
    resultDiv.classList.add('hidden');

    try {
      const text = await file.text();
      const data = JSON.parse(text);

      const response = await fetch('/import', {
        method: 'POST',
        headers: {
          'Content-Type': 'application/json',
          'x-csrf-token': csrfToken,
          ...(apiKeyInput?.value ? { 'x-api-key': apiKeyInput.value } : {}),
        },
        body: JSON.stringify(data),
      });

      const result = await response.json();

      if (result.ok) {
        resultDiv.className = 'mt-4 p-3 bg-emerald-50 border border-emerald-200 rounded-lg text-sm text-emerald-800';
        resultDiv.textContent = `‚úì Importaci√≥n exitosa. Se importaron ${Number(result.imported || 0)} items nuevos.`;
        toast.success(`${result.imported} items importados correctamente`);

        setTimeout(() => {
          window.location.href = '/';
        }, 2000);
      } else {
        throw new Error(result.error || 'Error desconocido');
      }
    } catch (err) {
      resultDiv.className = 'mt-4 p-3 bg-red-50 border border-red-200 rounded-lg text-sm text-red-800';
      resultDiv.textContent = `‚úï Error: ${String(err?.message || 'Error desconocido')}`;
      toast.error('Error al importar datos');
    } finally {
      resultDiv.classList.remove('hidden');
      LoadingManager.hide(importBtn);
      fileInput.value = '';
      if (apiKeyInput) apiKeyInput.value = '';
      importBtn.disabled = true;
    }
  });
</script>
