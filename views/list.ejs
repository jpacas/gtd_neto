<div class="flex items-center justify-between">
  <h2 class="text-lg font-semibold"><%= heading %></h2>
  <% if (showCapture) { %>
    <a class="text-sm underline" href="/">+ Capturar</a>
  <% } %>
</div>
<% if (sectionGuide) { %>
  <p class="text-sm text-slate-600 mt-1"><%= sectionGuide %></p>
<% } %>

<form method="GET" class="mt-4 bg-white border rounded-xl p-3 grid grid-cols-1 md:grid-cols-4 gap-2 items-end">
  <div class="md:col-span-2">
    <label class="text-xs text-slate-500">Buscar</label>
    <input type="text" name="q" value="<%= q || '' %>" placeholder="texto en tÃ­tulo, input, notas..." class="w-full border rounded-lg px-2 py-1.5 text-sm" />
  </div>
  <div>
    <label class="text-xs text-slate-500">Contexto (ctx)</label>
    <input type="text" name="ctx" value="<%= ctx || '' %>" placeholder="@pc, @casa..." class="w-full border rounded-lg px-2 py-1.5 text-sm" />
  </div>
  <div class="flex gap-2">
    <button class="text-sm px-3 py-1.5 rounded-lg bg-blue-600 text-white hover:bg-blue-700" type="submit">Filtrar</button>
    <a href="<%= basePath || '' %>" class="text-sm px-3 py-1.5 rounded-lg bg-white border hover:bg-slate-50">Limpiar</a>
  </div>
</form>

<div class="mt-4 space-y-3">
  <% if (!items.length) { %>
    <div class="bg-white dark:bg-slate-800 border dark:border-slate-700 rounded-xl overflow-hidden">
      <div class="empty-state m-4">
        <div class="text-4xl mb-3">ðŸ“‹</div>
        <div class="text-base font-semibold text-slate-700 dark:text-slate-200 mb-2">Sin resultados</div>
        <div class="text-sm text-slate-600 dark:text-slate-400">
          No se encontraron elementos que coincidan con tu bÃºsqueda.
        </div>
      </div>
    </div>
  <% } %>

  <% for (const it of items) { %>
    <div class="bg-white border rounded-xl p-4">
      <div class="flex items-start justify-between gap-4">
        <div class="min-w-0">
          <div class="font-medium"><%= it.title || '(sin procesar)' %></div>
          <div class="text-sm text-slate-600 mt-1 whitespace-pre-wrap"><%= it.input %></div>
          <div class="text-xs text-slate-500 mt-2 flex flex-wrap gap-2">
            <span class="px-2 py-0.5 rounded bg-slate-100 border">list: <%= it.list %></span>
            <span class="px-2 py-0.5 rounded bg-slate-100 border">kind: <%= it.kind || '-' %></span>
            <span class="px-2 py-0.5 rounded bg-slate-100 border">ctx: <%= it.context || '-' %></span>
            <% if (it.nextAction) { %>
              <span class="px-2 py-0.5 rounded bg-slate-100 border">next: <%= it.nextAction %></span>
            <% } %>
          </div>
        </div>

        <div class="flex flex-col gap-2 shrink-0">
          <% if (it.status === 'unprocessed') { %>
            <form method="POST" action="/inbox/<%= it.id %>/process">
              <button class="text-sm px-3 py-1 rounded-lg bg-blue-600 text-white hover:bg-blue-700">Procesar</button>
            </form>
          <% } %>

          <form method="POST" action="/items/<%= it.id %>/move" class="flex gap-2">
            <select name="list" class="text-sm border rounded-lg px-2 py-1">
              <% for (const opt of lists) { %>
                <option value="<%= opt %>" <%= it.list === opt ? 'selected' : '' %>><%= opt %></option>
              <% } %>
            </select>
            <button class="text-sm px-3 py-1 rounded-lg bg-white border hover:bg-slate-50">Mover</button>
          </form>

          <form method="POST" action="/items/<%= it.id %>/done">
            <button class="text-sm px-3 py-1 rounded-lg bg-blue-600 text-white hover:bg-blue-700">Done</button>
          </form>

          <form method="POST" action="/items/<%= it.id %>/delete" onsubmit="return confirm('Â¿Borrar?');">
            <button class="text-sm px-3 py-1 rounded-lg bg-white border text-red-700 hover:bg-red-50">Borrar</button>
          </form>
        </div>
      </div>

      <% if (it.notes) { %>
        <div class="mt-3 text-sm text-slate-700">
          <div class="text-xs font-semibold text-slate-500">Notas</div>
          <div class="whitespace-pre-wrap"><%= it.notes %></div>
        </div>
      <% } %>
    </div>
  <% } %>
</div>
