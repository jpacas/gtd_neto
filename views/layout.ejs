  </a>

  <% if (!hideAppNav) { %>
  <!-- Header sticky -->
  <header class="sticky top-0 z-20 bg-white/95 backdrop-blur-sm border-b border-slate-200 shadow-sm">
    <div class="max-w-6xl mx-auto px-4">
      <div class="flex items-center h-14 gap-2">

        <!-- Logo -->
        <a href="/" class="text-base font-bold text-slate-900 shrink-0 hover:text-blue-600 transition-colors">
          GTD_Neto
        </a>

        <div class="w-px h-5 bg-slate-200 shrink-0 hidden md:block mx-1"></div>

        <!-- Desktop nav -->
        <nav class="hidden md:flex items-center gap-0.5 flex-1 overflow-x-hidden" aria-label="NavegaciÃ³n principal">
          <a class="nav-link" href="/" data-page="/">ğŸ§­ Dashboard</a>
          <a class="nav-link" href="/collect" data-page="/collect">ğŸ“¥ Collect</a>
          <a class="nav-link" href="/hacer" data-page="/hacer">âœ… Hacer</a>
          <a class="nav-link" href="/agendar" data-page="/agendar">ğŸ—“ï¸ Agendar</a>
          <a class="nav-link" href="/delegar" data-page="/delegar">ğŸ¤ Delegar</a>
          <a class="nav-link" href="/desglosar" data-page="/desglosar">ğŸ§© Desglosar</a>
          <a class="nav-link" href="/no-hacer" data-page="/no-hacer">ğŸš« No hacer</a>
          <a class="nav-link" href="/terminado" data-page="/terminado">ğŸ¯ Terminado</a>
          <a class="nav-link" href="/stats" data-page="/stats">ğŸ“ˆ Stats</a>
        </nav>

        <!-- Right side: logout + hamburger -->
        <div class="ml-auto flex items-center gap-1 shrink-0">
          <% if (useSupabase && authUser) { %>
            <form method="POST" action="/auth/logout" class="hidden md:block">
              <input type="hidden" name="_csrf" value="<%= csrfToken %>" />
              <button class="text-xs px-2 py-1 rounded-lg border border-slate-300 bg-white hover:bg-amber-50 text-amber-700 transition-colors">ğŸšª Salir</button>
            </form>
          <% } %>
          <button id="nav-hamburger" aria-label="Abrir menÃº" aria-expanded="false" aria-controls="mobile-nav" class="md:hidden p-2 rounded-lg hover:bg-slate-100 transition-colors">
            <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M4 6h16M4 12h16M4 18h16"/></svg>
          </button>
        </div>

      </div>
    </div>

    <!-- Mobile nav (collapsible) -->
    <div id="mobile-nav" class="hidden md:hidden border-t border-slate-200 bg-white">
      <div class="max-w-6xl mx-auto px-4 py-2 flex flex-col gap-0.5">
        <% if (useSupabase && authUser) { %>
          <div class="flex items-center justify-end py-2 border-b border-slate-200 mb-1">
            <form method="POST" action="/auth/logout">
              <input type="hidden" name="_csrf" value="<%= csrfToken %>" />
              <button class="text-xs px-2 py-1 rounded-lg border border-slate-300 text-amber-700 hover:bg-amber-50 transition-colors">ğŸšª Salir</button>
            </form>
          </div>
        <% } %>
        <a class="nav-link-mobile" href="/" data-page="/">ğŸ§­ Dashboard</a>
        <a class="nav-link-mobile" href="/collect" data-page="/collect">ğŸ“¥ Collect</a>
        <a class="nav-link-mobile" href="/hacer" data-page="/hacer">âœ… Hacer</a>
        <a class="nav-link-mobile" href="/agendar" data-page="/agendar">ğŸ—“ï¸ Agendar</a>
        <a class="nav-link-mobile" href="/delegar" data-page="/delegar">ğŸ¤ Delegar</a>
        <a class="nav-link-mobile" href="/desglosar" data-page="/desglosar">ğŸ§© Desglosar</a>
        <a class="nav-link-mobile" href="/no-hacer" data-page="/no-hacer">ğŸš« No hacer</a>
        <a class="nav-link-mobile" href="/terminado" data-page="/terminado">ğŸ¯ Terminado</a>
        <a class="nav-link-mobile" href="/stats" data-page="/stats">ğŸ“ˆ Stats</a>
      </div>
    </div>
  </header>
  <% } %>

  <div class="max-w-6xl mx-auto p-4 md:p-6">

    <% if (flash?.error) { %>
      <div class="mb-4 p-3 rounded-lg bg-red-50 text-red-800 text-sm border border-red-200"><%= flash.error %></div>
    <% } %>

    <main id="main-content" class="mt-2" tabindex="-1">
      <%- body %>
    </main>
  </div>

  <!-- Scripts comunes -->
  <script nonce="<%= cspNonce %>" src="/public/js/toast.js"></script>
  <script nonce="<%= cspNonce %>" src="/public/js/utils.js"></script>
  <!-- Toastify JS -->
  <script src="https://cdn.jsdelivr.net/npm/toastify-js"></script>
  <!-- UI Helpers (loading states, toasts) -->
  <script nonce="<%= cspNonce %>" src="/public/js/ui-helpers.js"></script>
  <!-- Global Search -->
  <script nonce="<%= cspNonce %>" src="/public/js/search.js"></script>
  <!-- Keyboard Shortcuts -->
  <script nonce="<%= cspNonce %>" src="/public/js/hotkeys.js"></script>

  <script nonce="<%= cspNonce %>">
    // Active nav indicator
    (function () {
      const path = window.location.pathname;
      document.querySelectorAll('.nav-link, .nav-link-mobile').forEach(function (link) {
        if (link.dataset.page === path) link.classList.add('nav-active');
      });
    })();

    // Hamburger menu toggle
    (function () {
      const hamburger = document.getElementById('nav-hamburger');
      const mobileNav = document.getElementById('mobile-nav');
      if (!hamburger || !mobileNav) return;
      hamburger.addEventListener('click', function () {
        const isOpen = !mobileNav.classList.contains('hidden');
        mobileNav.classList.toggle('hidden');
        hamburger.setAttribute('aria-expanded', String(!isOpen));
      });
    })();
  </script>

  <!-- PWA Service Worker -->
  <script nonce="<%= cspNonce %>">
    if ('serviceWorker' in navigator) {
      window.addEventListener('load', function () {
        navigator.serviceWorker.register('/sw.js').catch(function () {});
      });
    }
  </script>

  <!-- Flash message to toast -->
  <% if (flash?.error) { %>
    <script nonce="<%= cspNonce %>">
      document.addEventListener('DOMContentLoaded', function () {
        toast.error(<%- JSON.stringify(String(flash.error || '')) %>);
      });
    </script>
  <% } %>
  <% if (flash?.success) { %>
    <script nonce="<%= cspNonce %>">
      document.addEventListener('DOMContentLoaded', function () {
        toast.success(<%- JSON.stringify(String(flash.success || '')) %>);
      });
    </script>
  <% } %>
</body>
</html>
