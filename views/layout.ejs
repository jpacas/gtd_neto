  <div class="max-w-6xl mx-auto p-4 md:p-6">
    <div class="flex flex-col md:flex-row md:items-center md:justify-between gap-4">
      <div class="flex items-center gap-3">
        <div>
          <h1 class="text-xl md:text-2xl font-semibold dark:text-slate-100">GTD_Neto</h1>
          <p class="text-xs md:text-sm text-slate-600 dark:text-slate-400">Dashboard general + flujo Collect -> Destino</p>
        </div>
      </div>
      <div class="w-full md:w-auto flex flex-col gap-2 md:items-end">
        <nav class="text-xs md:text-sm flex flex-col gap-2 items-start md:items-end" aria-label="NavegaciÃ³n principal">
          <div class="flex flex-wrap items-center gap-1.5 md:gap-2 rounded-xl border dark:border-slate-700 bg-white/70 dark:bg-slate-900/30 p-1.5">
            <a class="px-2 py-1 md:px-3 rounded-lg bg-white dark:bg-slate-800 border dark:border-slate-700 hover:bg-slate-100 dark:hover:bg-slate-700 transition-colors font-medium" href="/">ğŸ“Š <span class="hidden sm:inline">Dashboard</span></a>
            <a class="px-2 py-1 md:px-3 rounded-lg bg-white dark:bg-slate-800 border dark:border-slate-700 hover:bg-slate-100 dark:hover:bg-slate-700 transition-colors" href="/search" title="BÃºsqueda global">ğŸ” <span class="hidden md:inline">Buscar</span></a>
            <a class="px-2 py-1 md:px-3 rounded-lg bg-white dark:bg-slate-800 border dark:border-slate-700 hover:bg-slate-100 dark:hover:bg-slate-700 transition-colors" href="/stats" title="EstadÃ­sticas">ğŸ“Š <span class="hidden md:inline">Stats</span></a>
          </div>

          <div class="flex flex-wrap items-center gap-1.5 md:gap-2 rounded-xl border dark:border-slate-700 bg-white/70 dark:bg-slate-900/30 p-1.5">
            <a class="px-2 py-1 md:px-3 rounded-lg bg-white dark:bg-slate-800 border dark:border-slate-700 hover:bg-slate-100 dark:hover:bg-slate-700 transition-colors" href="/collect">ğŸ“¥ <span class="hidden sm:inline">Collect</span></a>
            <a class="px-2 py-1 md:px-3 rounded-lg bg-white dark:bg-slate-800 border dark:border-slate-700 hover:bg-slate-100 dark:hover:bg-slate-700 transition-colors" href="/hacer">âœ… <span class="hidden sm:inline">Hacer</span></a>
            <a class="px-2 py-1 md:px-3 rounded-lg bg-white dark:bg-slate-800 border dark:border-slate-700 hover:bg-slate-100 dark:hover:bg-slate-700 transition-colors" href="/agendar">ğŸ“… <span class="hidden sm:inline">Agendar</span></a>
            <a class="px-2 py-1 md:px-3 rounded-lg bg-white dark:bg-slate-800 border dark:border-slate-700 hover:bg-slate-100 dark:hover:bg-slate-700 transition-colors" href="/delegar">ğŸ¤ <span class="hidden sm:inline">Delegar</span></a>
            <a class="px-2 py-1 md:px-3 rounded-lg bg-white dark:bg-slate-800 border dark:border-slate-700 hover:bg-slate-100 dark:hover:bg-slate-700 transition-colors" href="/desglosar">ğŸ”¨ <span class="hidden sm:inline">Desglosar</span></a>
            <a class="px-2 py-1 md:px-3 rounded-lg bg-white dark:bg-slate-800 border dark:border-slate-700 hover:bg-slate-100 dark:hover:bg-slate-700 transition-colors" href="/no-hacer">ğŸš« <span class="hidden sm:inline">No hacer</span></a>
            <a class="px-2 py-1 md:px-3 rounded-lg bg-white dark:bg-slate-800 border dark:border-slate-700 hover:bg-slate-100 dark:hover:bg-slate-700 transition-colors" href="/terminado">ğŸ‰ <span class="hidden sm:inline">Terminado</span></a>
          </div>
        </nav>

        <% if (useSupabase && authUser) { %>
          <div class="flex items-center gap-2 rounded-xl border dark:border-slate-700 bg-white/70 dark:bg-slate-900/30 p-1.5">
            <span class="px-2 py-1 rounded-lg bg-slate-50 dark:bg-slate-800 border dark:border-slate-700 text-xs text-slate-600 dark:text-slate-300">ğŸ‘¤ <%= authUser.email %></span>
            <form method="POST" action="/auth/logout">
              <input type="hidden" name="_csrf" value="<%= csrfToken %>" />
              <button class="px-2 py-1 md:px-3 rounded-lg bg-amber-50 text-amber-800 border border-amber-200 hover:bg-amber-100 dark:bg-amber-900/30 dark:text-amber-200 dark:border-amber-700 transition-colors">ğŸšª <span class="hidden sm:inline">Salir</span></button>
            </form>
          </div>
        <% } %>
      </div>
    </div>

    <% if (flash?.error) { %>
      <div class="mt-4 p-3 rounded-lg bg-red-50 dark:bg-red-900/30 text-red-800 dark:text-red-200 text-sm border border-red-200 dark:border-red-800"><%= flash.error %></div>
    <% } %>

    <main id="main-content" class="mt-6" tabindex="-1">
      <%- body %>
    </main>
  </div>

  <!-- Scripts comunes -->
  <script nonce="<%= cspNonce %>" src="/public/js/toast.js"></script>
  <script nonce="<%= cspNonce %>" src="/public/js/utils.js"></script>
  <script nonce="<%= cspNonce %>" src="/public/js/tags.js"></script>

  <!-- PWA Service Worker -->
  <script nonce="<%= cspNonce %>">
    if ('serviceWorker' in navigator) {
      window.addEventListener('load', () => {
        navigator.serviceWorker.register('/sw.js').catch(err => {
          console.log('SW registration failed:', err);
        });
      });
    }

  </script>

  <!-- Flash message to toast conversion -->
  <% if (flash?.error) { %>
    <script nonce="<%= cspNonce %>">
      document.addEventListener('DOMContentLoaded', () => {
        toast.error(<%- JSON.stringify(String(flash.error || '')) %>);
      });
    </script>
  <% } %>
  <% if (flash?.success) { %>
    <script nonce="<%= cspNonce %>">
      document.addEventListener('DOMContentLoaded', () => {
        toast.success(<%- JSON.stringify(String(flash.success || '')) %>);
      });
    </script>
  <% } %>
</body>
</html>
