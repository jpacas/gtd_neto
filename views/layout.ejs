    <% if (flash?.error) { %>
      <div class="mt-4 p-3 rounded-lg bg-red-50 dark:bg-red-900/30 text-red-800 dark:text-red-200 text-sm border border-red-200 dark:border-red-800"><%= flash.error %></div>
    <% } %>

    <main class="mt-6">
