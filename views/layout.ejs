  </div>

  <!-- Scripts comunes -->
  <script nonce="<%= cspNonce %>" src="/public/js/toast.js"></script>
  <script nonce="<%= cspNonce %>" src="/public/js/utils.js"></script>
  <script nonce="<%= cspNonce %>" src="/public/js/tags.js"></script>

  <!-- Active nav indicator -->
  <script nonce="<%= cspNonce %>">
    (function() {
      const path = window.location.pathname;
      document.querySelectorAll('.nav-link').forEach(link => {
        if (link.dataset.page === path) {
          link.classList.add('nav-active');
        }
      });
    })();
  </script>

  <!-- PWA Service Worker -->
  <script nonce="<%= cspNonce %>">
    if ('serviceWorker' in navigator) {
      window.addEventListener('load', () => {
        navigator.serviceWorker.register('/sw.js').catch(err => {
          console.log('SW registration failed:', err);
        });
      });
    }

  </script>

  <!-- Flash message to toast conversion -->
  <% if (flash?.error) { %>
    <script nonce="<%= cspNonce %>">
      document.addEventListener('DOMContentLoaded', () => {
        toast.error(<%- JSON.stringify(String(flash.error || '')) %>);
      });
    </script>
  <% } %>
  <% if (flash?.success) { %>
    <script nonce="<%= cspNonce %>">
      document.addEventListener('DOMContentLoaded', () => {
        toast.success(<%- JSON.stringify(String(flash.success || '')) %>);
      });
    </script>
  <% } %>
