<div class="flex items-center justify-between gap-3">
  <div>
    <h2 class="text-lg font-semibold">Agendar</h2>
    <p class="text-sm text-slate-600 mt-1">Fecha al inicio, actividad después. Ordenado por fecha más próxima primero.</p>
  </div>
  <a href="/collect" class="text-sm px-3 py-1.5 rounded-lg border bg-white hover:bg-slate-50">Ir a Collect</a>
</div>

<div class="mt-4 rounded-xl border bg-white overflow-hidden" id="agendarList">
  <div class="px-3 py-1.5 border-b bg-slate-50 text-[11px] text-slate-500 flex items-center gap-2">
    <span class="w-36 text-center">Fecha</span>
    <span>Actividad</span>
  </div>

  <% if (!items.length) { %>
    <div class="p-5 text-sm text-slate-600">No hay actividades en Agendar.</div>
  <% } %>

  <% for (const it of items) { %>
    <div class="px-3 py-2 border-b last:border-b-0 <%= !it.actionableOk ? 'bg-red-50' : (it.scheduledFor ? '' : 'bg-amber-50') %>">
      <div class="flex items-center gap-2">
        <form method="POST" action="/agendar/<%= it.id %>/update" class="agendar-quick-form w-36 shrink-0" data-id="<%= it.id %>">
          <% if (needApiKey) { %><input type="hidden" name="apiKey" value="<%= apiKey || '' %>" /><% } %>
          <input type="hidden" name="title" value="<%= it.title || it.input %>" />
          <input type="date" name="scheduledFor" value="<%= it.scheduledFor || '' %>" class="w-full text-xs px-1.5 py-1 rounded bg-transparent border border-transparent hover:border-slate-200 focus:border-slate-300" required onchange="this.form.submit()" />
        </form>

        <div class="agendar-view-row flex-1 min-w-0" data-id="<%= it.id %>" data-title="<%= it.title || it.input %>">
          <span class="text-sm"><%= it.title || it.input %></span>
        </div>

        <button type="button" class="text-slate-500 hover:text-slate-700 edit-toggle" data-id="<%= it.id %>" title="Editar actividad">✏️</button>
      </div>

      <% if (!it.scheduledFor) { %>
        <div class="text-[11px] text-amber-800 mt-1">Falta fecha. Asígnala directamente en el campo de fecha.</div>
      <% } %>
      <% if (!it.actionableOk) { %>
        <div class="text-[11px] text-red-700 mt-1"><%= it.actionableFeedback || 'Mejorar redacción para que sea clara y accionable.' %></div>
      <% } %>
    </div>
  <% } %>
</div>

<script>
  (function () {
    document.querySelectorAll('.edit-toggle').forEach((btn) => {
      btn.addEventListener('click', () => {
        const id = btn.dataset.id;
        const row = document.querySelector(`.agendar-view-row[data-id="${id}"]`);
        const quickForm = document.querySelector(`.agendar-quick-form[data-id="${id}"]`);
        if (!row || !quickForm) return;

        const currentTitle = row.dataset.title || '';
        const nextTitle = window.prompt('Editar actividad', currentTitle);
        if (nextTitle == null) return;
        const title = String(nextTitle).trim();
        if (!title) return;

        const hiddenTitle = quickForm.querySelector('input[name="title"]');
        if (!hiddenTitle) return;
        hiddenTitle.value = title;
        quickForm.submit();
      });
    });
  })();
</script>
