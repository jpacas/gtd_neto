<div class="mt-4 rounded-xl border bg-white overflow-hidden" id="agendarList">
  <div class="px-3 py-1.5 border-b bg-slate-50 text-[11px] text-slate-500 flex items-center gap-2">
    <span class="w-36 text-center">Fecha</span>
    <span>Actividad</span>
  </div>

  <% if (!items.length) { %>
    <div class="empty-state m-4">
      <div class="text-4xl mb-3">üóìÔ∏è</div>
      <div class="text-base font-semibold text-slate-700 mb-2">Sin actividades agendadas</div>
      <div class="text-sm text-slate-600 mb-4">
        Las tareas con fecha espec√≠fica aparecer√°n aqu√≠.<br/>
        Organiza tareas futuras desde Collect.
      </div>
      <a href="/collect" class="inline-flex items-center gap-2 px-4 py-2 rounded-lg bg-blue-600 text-white hover:bg-blue-700 transition-all text-sm font-medium hover:shadow-md">
        <span>üì•</span>
        <span>Ir a Collect</span>
      </a>
    </div>
  <% } %>

  <% for (const it of items) { %>
    <div class="px-3 py-2 border-b last:border-b-0 <%= !it.actionableOk ? 'bg-red-50' : (it.scheduledFor ? '' : 'bg-amber-50') %>">
      <div class="flex items-center gap-2">
        <form method="POST" action="/agendar/<%= it.id %>/update" class="agendar-quick-form w-36 shrink-0" data-id="<%= it.id %>">
          <input type="hidden" name="_csrf" value="<%= csrfToken %>" />
          <input type="hidden" name="title" value="<%= it.title || it.input %>" />
          <input type="hidden" name="estimateMin" value="<%= it.estimateMin || 10 %>" />
          <input type="date" name="scheduledFor" value="<%= it.scheduledFor || '' %>" class="w-full text-xs px-1.5 py-1 rounded bg-transparent border border-transparent hover:border-slate-200 focus:border-slate-300" required onchange="this.form.submit()" />
        </form>

        <div class="agendar-view-row flex-1 min-w-0" data-id="<%= it.id %>" data-title="<%= it.title || it.input %>" data-estimate="<%= it.estimateMin || 10 %>">
          <span class="text-sm"><%= it.title || it.input %></span>
          <% if (it.estimateMin) { %>
            <span class="text-xs text-slate-500 ml-2">‚è±Ô∏è <%= it.estimateMin %> min</span>
          <% } %>
        </div>

        <button type="button" class="text-slate-500 hover:text-slate-700 edit-toggle shrink-0" data-id="<%= it.id %>" title="Editar actividad">‚úèÔ∏è</button>

        <form method="POST" action="/agendar/<%= it.id %>/complete">
          <input type="hidden" name="_csrf" value="<%= csrfToken %>" />
          <button class="text-[11px] px-2 py-1 rounded border bg-emerald-50 text-emerald-700 hover:bg-emerald-100">Finalizada</button>
        </form>
      </div>

      <% if (!it.scheduledFor) { %>
        <div class="text-[11px] text-amber-800 mt-1">Falta fecha. As√≠gnala directamente en el campo de fecha.</div>
      <% } %>
      <% if (!it.actionableOk) { %>
        <div class="text-[11px] text-red-700 mt-1"><%= it.actionableFeedback || 'Mejorar redacci√≥n para que sea clara y accionable.' %></div>
      <% } %>
    </div>
  <% } %>
</div>

<script nonce="<%= cspNonce %>">
  (function () {
    document.querySelectorAll('.edit-toggle').forEach((btn) => {
      btn.addEventListener('click', async () => {
        const id = btn.dataset.id;
        const row = document.querySelector(`.agendar-view-row[data-id="${id}"]`);
        const quickForm = document.querySelector(`.agendar-quick-form[data-id="${id}"]`);
        if (!row || !quickForm) return;

        const currentTitle = row.dataset.title || '';
        const currentEstimate = Number(row.dataset.estimate) || 10;

        // Create inline edit form
        const form = document.createElement('form');
        form.className = 'flex-1 flex gap-2 items-center bg-slate-50 p-2 rounded';
        form.innerHTML = `
          <input type="text" name="title" value="${currentTitle}"
                 class="flex-1 px-2 py-1 text-sm border border-slate-300 rounded"
                 placeholder="Describe la actividad" required />
          <div class="flex items-center gap-1">
            <span class="text-xs text-slate-600">‚è±Ô∏è</span>
            <input type="number" name="estimateMin" value="${currentEstimate}"
                   class="w-16 px-2 py-1 text-sm border border-slate-300 rounded"
                   min="1" max="600" />
            <span class="text-xs text-slate-500">min</span>
          </div>
          <button type="submit" class="text-xs px-2 py-1 rounded border border-slate-300 bg-white hover:bg-slate-50">Guardar</button>
          <button type="button" class="cancel-edit text-xs px-2 py-1 rounded border border-slate-300 bg-white hover:bg-slate-50">Cancelar</button>
        `;

        form.addEventListener('submit', (e) => {
          e.preventDefault();
          const titleInput = form.querySelector('input[name="title"]');
          const estimateInput = form.querySelector('input[name="estimateMin"]');
          const title = titleInput.value.trim();
          const estimate = Number(estimateInput.value) || 10;

          if (!title) return;

          const hiddenTitle = quickForm.querySelector('input[name="title"]');
          const hiddenEstimate = quickForm.querySelector('input[name="estimateMin"]');
          if (hiddenTitle) hiddenTitle.value = title;
          if (hiddenEstimate) hiddenEstimate.value = estimate;
          quickForm.submit();
        });

        form.querySelector('.cancel-edit').addEventListener('click', () => {
          form.replaceWith(row);
        });

        row.replaceWith(form);
        form.querySelector('input[name="title"]').focus();
      });
    });
  })();
</script>
